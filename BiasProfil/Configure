#!/bin/sh
#########################################################################
#
# Configure PROFIL/BIAS for new host/target
# -----------------------------------------
#
# Copyright (c) 1997 Olaf Knueppel
#
# $Id: Configure 487 2006-12-01 16:07:13Z keil $
#
#########################################################################

echo
echo Configuring PROFIL/BIAS
echo =======================
echo

CONFIGPATH=config
README=README

rm -f Host.cfg

echo "Available host/target configurations (HOST-OS-CC):"
echo
CWD=`pwd`
CNT=0
cd $CONFIGPATH
for CONFIG in *
do
    if [ -d $CONFIG ]
    then
	CNT=`expr $CNT + 1`
	echo "    $CNT.	$CONFIG";
	if [ -f $CONFIG/$README ]
	then
	    cat $CONFIG/$README | sed -e "s/^/	  &/g"
	fi
    fi
done
cd $CWD

echo

if [ -z $BIAS_ARCH ]
then
  echo -n "Enter the number of the configuration you want to use: "
  read OURCNT
else
  echo "*** Configuration set by the BIAS_ARCH variable to $BIAS_ARCH ***"
  OURCNT=$BIAS_ARCH
fi

ARCH=
CNT=0
cd $CONFIGPATH
for CONFIG in *
do
    if [ -d $CONFIG ]
    then
	CNT=`expr $CNT + 1`
	if [ x$CNT = x$OURCNT ]
	then
	    ARCH=$CONFIG
	fi
    fi
done
cd $CWD

if [ x$ARCH = x ]
then
    echo Error: Invalid or unknown configuration.
    exit 1
fi

DATE=`date`
WHOAMI=`whoami`
HOSTNAME=`hostname`

cat > Host.cfg <<EOF
# This file is generated automatically, do not edit by hand!
# Created by $WHOAMI on $HOSTNAME
# $DATE
#
ARCH	= $ARCH
include \$(BASEDIR)/config/\$(ARCH)/Host.cfg
EOF

echo
echo Configuration finished.
echo
